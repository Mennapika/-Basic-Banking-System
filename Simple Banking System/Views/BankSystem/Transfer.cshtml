@model Transactions

<form method="post" asp-action="Transfer">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Transfer Money</h2>
            <hr/>
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for=Sender></label>
            <input asp-for=Sender class="form-control" />
            <span asp-validation-for="Sender" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for=Recevier></label>
            <input asp-for=Recevier class="form-control" />
            <span asp-validation-for="Recevier" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for=TransferAmount></label>
            <input asp-for=TransferAmount class="form-control" />
             <span asp-validation-for="TransferAmount" class="text-danger"></span>
        </div>
        <div>
        <button type="submit" class="btn-outline-primary btn " style="width:150px">Transfer</button>
        <a asp-controller="BankSystem" asp-action="Index" class="btn-outline-secondary btn align-content-center m-2 " style="width:250px">Go Back To List  </a>
       </div>
    </div>

</form>
@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}
